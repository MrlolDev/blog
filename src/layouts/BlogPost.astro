---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getLangFromUrl } from "../i18n/utils";
import Tags from "../components/Tags.astro";
import Back from "../components/Back.astro";

type Props = CollectionEntry<"blog">["data"] & {};

const { title, description, pubDate, tags } = Astro.props;
console.log(Astro);
// get children
const lang = getLangFromUrl(Astro.url);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-theme-background text-white">
    <Header />
    <article class="min-h-[70vh] py-12 px-8 lg:px-32">
      <header class="flex flex-col items-start gap-2">
        <Back />
        <h1 class="title font-bold text-4xl">{title}</h1>
        <div
          class="flex flex-col lg:flex-row items-start lg:items-center gap-2"
        >
          <FormattedDate date={pubDate} />
          <Tags tags={tags} />
        </div>
      </header>
      <main class="prose prose-lg max-w-none mt-8">
        <slot />
      </main>
    </article>
    <Footer />
  </body>
</html>
