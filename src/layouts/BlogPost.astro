---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Tags from "../components/Tags.astro";
import Back from "../components/Back.astro";

type Props = CollectionEntry<"blog">["data"] & {};

const { title, description, pubDate, tags } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-theme-background text-white">
    <Header />
    <article class="min-h-[70vh] py-12 px-8 lg:px-32">
      <header class="flex flex-col items-start gap-2">
        <Back />
        <h1 class="title font-bold text-4xl">
          {title}
          <div
            class="inline-block ml-2 px-2 py-1 text-xs font-semibold text-black bg-red-500 rounded-full"
          >
            {t("articles:draft")}
          </div>
        </h1>
        <div
          class="flex flex-col lg:flex-row items-start lg:items-center gap-2"
        >
          <FormattedDate date={pubDate} />
          <Tags tags={tags} />
        </div>
      </header>
      <main class="prose blog-post prose-lg max-w-none mt-8">
        {
          tags.includes("draft") ? (
            <div class="bg-theme-accent text-theme-background p-4 rounded-md">
              This post is a draft and is not published yet.
            </div>
          ) : (
            <slot />
          )
        }
      </main>
    </article>
    <Footer />
  </body>
</html>
