---
import { getLangFromUrl } from "../../i18n/utils";
interface Props {
  tags: string[];
  where?: "post" | "page";
}

const { tags, where = "post" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div class="grid grid-cols-2 lg:grid-cols-3 items-center gap-3">
  {
    tags.map((x) => (
      <a href={`/${lang}/tags/${x}`}>
        <div
          class="rounded-full border text-sm  text-center border-theme-text dark:border-dark-text px-4 py-2"
          transition:name={`tag-${x}`}
        >
          {x}
        </div>
      </a>
    ))
  }
</div>
