  class="social-links flex flex-row items-center gap-4 text-theme-text/[.6] dark:text-dark-text/[.6] h-full"
>
  {type == "navbar" && <ThemeIcon />}
  <a href={`${lang == "es" ? "/en" : "/es"}${route != "" ? `/${route}` : ""}`}>
    <img
      src={lang == "es" ? "/icons/uk.svg" : "/icons/es.svg"}
      alt={lang == "es" ? "English flag" : "Spanish flag"}
      width="32px"
      height="21px"
      class="rounded-sm transition duration-200 hover:border-brand-primary/[.6]"
    />
  </a>

