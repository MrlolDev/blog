---
import { getLangFromUrl } from "../i18n/utils";
import ThemeIcon from "./ThemeIcon.astro";
const lang = getLangFromUrl(Astro.url);
const { type = "footer" } = Astro.props;
let route = Astro.url.pathname
  .split("/")
  .filter((x) => x != lang)
  .join("/")
  // remove first / if exists
  .replace(/^\//, "");
